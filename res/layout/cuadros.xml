<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView 
        android:id="@+id/img1"
        android:layout_width="@dimen/imgwh"
        android:layout_height="@dimen/imgwh"
        android:src="@color/azul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
    <ImageView 
        android:id="@+id/img2"
        android:layout_width="@dimen/imgwh"
        android:layout_height="@dimen/imgwh"
        android:src="@color/naranaja"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/img1"
        />
    <ImageView 
        android:id="@+id/img3"
        android:layout_width="@dimen/imgwh"
        android:layout_height="@dimen/imgwh"
        android:src="@color/rojo"
        android:layout_toRightOf="@id/img1"
        android:layout_below="@id/img2"
        />
    <ImageView 
        android:id="@+id/img4"
        android:layout_width="@dimen/imgwh"
        android:layout_height="@dimen/imgwh"
        android:src="@color/verde"
        android:layout_toRightOf="@id/img3"
        android:layout_below="@id/img2"
        />
    <ImageView 
        android:id="@+id/img5"
        android:layout_width="@dimen/imgwh"
        android:layout_height="@dimen/imgwh"
        android:src="@color/violeta"
        android:layout_centerInParent="true"
        />
    <ImageView 
        android:id="@+id/img6"
        android:layout_width="@dimen/imgwh"
        android:layout_height="@dimen/imgwh"
        android:src="@color/azul"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
    <ImageView 
        android:id="@+id/img7"
        android:layout_width="@dimen/imgwh"
        android:layout_height="@dimen/imgwh"
        android:src="@color/naranaja"
        android:layout_alignParentRight="true"
        android:layout_above="@id/img6"
        />

</RelativeLayout>